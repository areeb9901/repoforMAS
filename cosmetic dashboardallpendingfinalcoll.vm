<head>
    <link rel="stylesheet" href="$request.contextPath/js/jquery-ui-1.11.4/css/smoothness/jquery-ui.css?ver=1.0"/>

    <style>
        /* Make header cells a positioning context */
        #PendingFinalApprovalTable thead th {
            position: relative;
            vertical-align: middle;
        }

        /* Remove DataTables default background sort icons, reduce extra padding */
        #PendingFinalApprovalTable thead th.sorting,
        #PendingFinalApprovalTable thead th.sorting_asc,
        #PendingFinalApprovalTable thead th.sorting_desc {
            background-image: none !important;
            padding-right: 18px; /* space for icon */
        }

        /* Base style for our sort icons */
        #PendingFinalApprovalTable thead th.sorting:after,
        #PendingFinalApprovalTable thead th.sorting_asc:after,
        #PendingFinalApprovalTable thead th.sorting_desc:after {
            position: absolute;
            right: 6px;                /* keeps icon close to text */
            top: 50%;
            transform: translateY(-50%);
            font-family: "Font Awesome 5 Free";
            font-weight: 900;
            font-size: 10px;
            color: inherit;            /* same color as header text */
            opacity: 1;
        }

        /* Unsorted state */
        #PendingFinalApprovalTable thead th.sorting:after {
            content: "\f0dc";          /* fa-sort */
        }

        /* Asc / desc states */
        #PendingFinalApprovalTable thead th.sorting_asc:after {
            content: "\f0de";          /* fa-sort-up */
        }

        #PendingFinalApprovalTable thead th.sorting_desc:after {
            content: "\f0dd";          /* fa-sort-down */
        }
    </style>
</head>
