collateralDocStatusDetails.setChasedUser(getUser().getFullname());
collateralDocStatusDetails.setChasedDate(BeagleDateFormat.format(new java.util.Date(), BeagleDateFormat.FORMAT));

try {
    repository.saveOrupdate(collateralDocStatusDetails);
    System.out.println("Chase persisted for segment: " + collateralDocStatusDetails.getCollateralSegmentId());
} catch (Exception e) {
    e.printStackTrace();
}











String chaseNote = "Chased by " + user.getFullname() + " on " +
        BeagleDateFormat.format(new Date(), BeagleDateFormat.FORMAT);
    collateralDocAudit.setComments(chaseNote);
}
